package com.isi.boat.Views;
import java.awt.Dimension;
import java.awt.event.ActionEvent;

import javax.swing.BorderFactory;
import javax.swing.Box;
import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JToggleButton;

import com.isi.boat.Controllers.BoatController;
public class NavigationPanel extends JPanel {

	private JButton upButton;
	private BoatController controller;
	private static final long serialVersionUID = 1L;
	public NavigationPanel()
	{
		upButton = new JButton("up");
        buttons[1] = new JToggleButton("down");
        buttons[2] = new JToggleButton("left");
        buttons[3] = new JToggleButton("right");
        addListeners();
        this.add(buttons[0]);
        this.add(buttons[1]);
        this.add(buttons[2]);
        this.add(buttons[3]);   
	}
	public void setcontroller(BoatController controller)
	{
		this.controller=controller;
	}
	private void addListeners()
	{
		buttons[0].addActionListener((ActionEvent e) -> controller.changeDirection(0));
		buttons[1].addActionListener((ActionEvent e) -> controller.changeDirection(1));
		buttons[2].addActionListener((ActionEvent e) -> controller.changeDirection(2));
		buttons[3].addActionListener((ActionEvent e) -> controller.changeDirection(3));		
	}
}
