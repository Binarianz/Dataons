package com.isi.counter.views;
import java.awt.Dimension;
import java.awt.event.ActionEvent;

import javax.swing.Box;
import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JPanel;
import javax.swing.JSlider;

import com.isi.counter.controllers.CounterController;

public class AdvaneControllPanel extends JPanel {
private static final long serialVersionUID = 1L;
	
	private CounterController controller;
	private JButton advance;
	private JSlider slider;
	private JButton reset;
	
	AdvaneControllPanel() {
		super();
		this.setLayout(new BoxLayout(this, BoxLayout.Y_AXIS));
		advance=new JButton();
		slider=new JSlider();
		reset=new JButton("btn");
		advance.setAlignmentX(0.5f);
		slider.setAlignmentX(0.5f);
		reset.setAlignmentX(0.5f);
		this.add(slider);
		this.add(reset);
	}
	public void setController(CounterController controller)
	{
		this.controller = controller;
		addListeners();
	}
	
	private void addListeners()
	{
		//slider.list
		//slider.addChangeListener((ActionEvent e) -> controller.increment());
		reset.addActionListener((ActionEvent e) -> controller.decrement());
	}
}
