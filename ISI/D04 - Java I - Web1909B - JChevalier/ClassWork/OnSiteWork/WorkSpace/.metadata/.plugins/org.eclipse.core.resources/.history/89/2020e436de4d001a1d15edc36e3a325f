
public class ThreadTest {

	private int value;
	public ThreadTest()
	{
		value=0;
		
		Runnable runnable=new Runnable() {
			
			@Override
			public void run() {
				for (int i = 0; i <10; i++) {
					
					value++;
					System.out.println("Threadtest : Value="+value);
					try {
						Thread.sleep(1000);
					} catch (InterruptedException e) {
						e.printStackTrace();
					}
				}
				
			}
		};
		
		Thread thread=new Thread(runnable);
		thread.start();
	}
}
